    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <% @users.each do |user| %>
                <a href="/users/<%= user.id %>">
                    <div class="alert alert-info" role="alert">
                        <h2>Username: <%= user.username %></h2>
                        <h3>Email: <%= user.email %></h3>
                    </div>
                </a>
            <% end %>
        </div>
        <div class="col-md-4">
        </div>
        
    </div>